<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.okysoft.annictim">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AnnictimApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".presentation.activity.WorksActivity"></activity>
        <activity
            android:name=".presentation.activity.LaunchActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activity.MainActivity" />
        <activity
            android:name=".presentation.activity.LoginActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="com.okysoft.annictim.oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.WorkDetailActivity"
            android:label="@string/title_activity_work_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.activity.RecordsActivity" />
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.activity.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.UserActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.activity.SettingActivity" />
    </application>

</manifest>